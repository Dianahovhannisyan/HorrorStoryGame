<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <ImageView
        android:id="@+id/photo1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/komnata1"
        android:scaleType="centerCrop"
        android:contentDescription="Фото комнаты"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sceneText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Текст сцены"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo1"
        app:layout_constraintVertical_bias="0.138" />

    <ImageView
        android:id="@+id/photo2"
        android:layout_width="353dp"
        android:layout_height="591dp"
        android:contentDescription="Анкета детей"
        android:scaleType="centerCrop"
        android:src="@drawable/anketadeti"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/photoBottomGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <ImageView
        android:id="@+id/photo3"
        android:layout_width="376dp"
        android:layout_height="598dp"
        android:contentDescription="Анкета игрока"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/anketaigrok"
        app:layout_constraintBottom_toTopOf="@id/photoBottomGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#6F6E6E"
        android:text="Продолжить"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoBottomGuide"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/photoBottomGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="120dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
